<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycleview_height">
    <ImageButton
        android:id="@+id/trailer_image"
        android:src="@drawable/ic_play_arrow"
        tools:src="@drawable/ic_logo"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="@dimen/image_button_width"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/trailer_item_text_view"
        tools:text="Trailer 1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/trailer_image"
        android:layout_toEndOf="@+id/trailer_image" />
</RelativeLayout>